# usage: covs
echo '================================================================='
for file in $@
do
	echo $file
	grep "#####" -A5 -B5 $file | grep -v "\<_" | grep -v "return 0;" | \
            grep -v "#####:[ ]*[0-9]*:[{}]"
	echo '================================================================='
done
